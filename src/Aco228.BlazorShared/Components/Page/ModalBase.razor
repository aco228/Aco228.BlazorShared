@if (IsOpen)
{
    <div class="modal-overlay" @onclick="OnOverlayClicked">
        <div class="modal-panel" @onclick:stopPropagation="true">
            <div class="modal-header">
                <span class="modal-title">@Title</span>
                <button class="modal-close" type="button" @onclick="Close">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
                        <path d="M2 2L10 10M10 2L2 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                @if (IsLoading)
                {
                    <div class="modal-loading-overlay">
                        <div class="modal-loading-spinner"></div>
                    </div>
                }
                <div class="modal-content @(IsLoading ? "modal-content--loading" : "")">
                    @ChildContent
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<bool> IsOpenChanged { get; set; }
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private async Task Close()
    {
        IsOpen = false;
        await IsOpenChanged.InvokeAsync(false);
    }

    private async Task OnOverlayClicked()
    {
        await Close();
    }
}
